// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DB_URL")
}

model Post {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String 
    content     String
    tags        String[]
    author      String @default("Matteo Camillo Ludovico")
    image       String?
    createdAt   DateTime @default(now())
}

model Bodycount {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    value       Int
    createdAt   DateTime @default(now())
}